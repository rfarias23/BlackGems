generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ORGANIZATION (PE FIRM / TENANT)
// ============================================================================

model Organization {
  id                String   @id @default(cuid())

  // Identity
  name              String
  slug              String   @unique
  legalName         String?
  type              OrganizationType

  // Legal
  entityType        OrgEntityType?
  jurisdictionOfFormation String?
  dateOfFormation   DateTime?
  taxId             String?
  leiCode           String?
  regulatoryStatus  RegulatoryStatus?
  secFileNumber     String?

  // Contact
  primaryContactName  String?
  primaryContactEmail String?
  primaryContactPhone String?
  investorRelationsEmail String?
  websiteUrl        String?
  logoUrl           String?

  // Address
  addressLine1      String?
  addressLine2      String?
  city              String?
  state             String?
  country           String   @default("USA")
  postalCode        String?

  // Operational
  baseCurrency      Currency @default(USD)
  fiscalYearEnd     String?
  reportingFrequency ReportingFrequency?
  baseTimeZone      String?

  // Strategy (firm-level defaults)
  firmStrategies    String[]
  targetGeographies String[]
  targetSectors     String[]

  // Status
  isActive          Boolean  @default(true)
  onboardingCompleted Boolean @default(false)

  // Metadata
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  funds             Fund[]
  users             User[]

  @@index([slug])
}

enum OrganizationType {
  SEARCH_FUND
  MICRO_PE
  MID_PE
  CONSOLIDATED_PE
}

enum OrgEntityType {
  LLC
  LP
  C_CORP
  S_CORP
  SICAV
  LTD
  SARL
  OTHER
}

enum RegulatoryStatus {
  REGISTERED
  EXEMPT
  NON_REGISTERED
}

enum ReportingFrequency {
  MONTHLY
  QUARTERLY
  SEMI_ANNUAL
  ANNUAL
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  role          UserRole  @default(LP_VIEWER)
  avatar        String?
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Tenant scope
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?

  // Relations
  fundMemberships FundMember[]
  activities      Activity[]
  comments        Comment[]
  tasksAssigned   Task[]           @relation("TaskAssignee")
  tasksCreated    Task[]           @relation("TaskCreator")
  notifications   Notification[]
  auditLogs       AuditLog[]
  sessions        Session[]
  accounts        Account[]
  investor        Investor?        // LP user linked to investor record
  conversations   Conversation[]

  @@index([organizationId])
}

enum UserRole {
  SUPER_ADMIN
  FUND_ADMIN
  INVESTMENT_MANAGER
  ANALYST
  LP_PRIMARY
  LP_VIEWER
  AUDITOR
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// FUND STRUCTURE
// ============================================================================

model Fund {
  id                String     @id @default(cuid())
  name              String
  slug              String?    @unique // Added per user request

  // Tenant scope
  organization      Organization? @relation(fields: [organizationId], references: [id])
  organizationId    String?

  legalName         String?
  type              FundType
  status            FundStatus @default(RAISING)
  vintage           Int        
  
  // Capital Structure
  targetSize        Decimal    @db.Decimal(15, 2)
  hardCap           Decimal?   @db.Decimal(15, 2)
  minimumCommitment Decimal?   @db.Decimal(15, 2)
  currency          Currency   @default(USD)
  
  // Fee Structure
  managementFee     Decimal    @db.Decimal(5, 4)
  carriedInterest   Decimal    @db.Decimal(5, 4)
  hurdleRate        Decimal?   @db.Decimal(5, 4)
  catchUpRate       Decimal?   @db.Decimal(5, 4)

  // Strategy & Focus
  strategy          String?    @db.Text
  investmentStages  String[]
  targetSectors     String[]
  targetGeographies String[]
  checkSizeMin      Decimal?   @db.Decimal(15, 2)
  checkSizeMax      Decimal?   @db.Decimal(15, 2)

  // Lifecycle Dates
  fundLaunchDate       DateTime?
  firstCloseDate       DateTime?
  finalCloseDate       DateTime?
  investmentPeriodEnd  DateTime?
  fundTermYears        Int?

  // Legal
  fundEntityType    OrgEntityType?
  jurisdiction      String?
  taxId             String?

  // Operational Config
  capitalCallNoticeDays    Int?
  distributionNoticeDays   Int?

  // Metadata
  description       String?    @db.Text
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relations
  members           FundMember[]
  deals             Deal[]
  documents         Document[]
  commitments       Commitment[]
  capitalCalls      CapitalCall[]
  distributions     Distribution[]
  portfolioCompanies PortfolioCompany[]
  reports            Report[]
  conversations      Conversation[]

  @@index([organizationId])
}

enum FundType {
  TRADITIONAL_SEARCH_FUND
  SELF_FUNDED_SEARCH
  ACCELERATOR_FUND
  ACQUISITION_FUND
  PE_FUND
  HOLDING_COMPANY
}

enum FundStatus {
  RAISING
  SEARCHING
  UNDER_LOI
  ACQUIRED
  OPERATING
  PREPARING_EXIT
  EXITED
  DISSOLVED
  CLOSED
}

enum Currency {
  USD
  EUR
  GBP
}

model FundMember {
  id        String   @id @default(cuid())
  fund      Fund     @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      FundMemberRole
  title       String?
  permissions String[]          // Module-level access control
  joinedAt    DateTime @default(now())
  leftAt    DateTime?
  isActive  Boolean  @default(true)

  @@unique([fundId, userId])
  @@index([fundId])
  @@index([userId])
}

enum FundMemberRole {
  PRINCIPAL
  CO_PRINCIPAL
  ADVISOR
  ANALYST
  ADMIN
}

// ============================================================================
// DEAL PIPELINE
// ============================================================================

model Deal {
  id                  String     @id @default(cuid())
  fund                Fund       @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId              String
  
  // Basic Info
  name                String
  companyName         String
  website             String?
  description         String?    @db.Text
  
  // Classification
  industry            String?
  subIndustry         String?
  businessModel       String?
  
  // Stage & Status
  stage               DealStage  @default(INITIAL_REVIEW)
  status              DealStatus @default(ACTIVE)
  
  // Sourcing
  source              DealSource? @relation(fields: [sourceId], references: [id])
  sourceId            String?
  sourceContact       String?
  sourceNotes         String?
  
  // Financials
  askingPrice         Decimal?   @db.Decimal(15, 2)
  revenue             Decimal?   @db.Decimal(15, 2)
  ebitda              Decimal?   @db.Decimal(15, 2)
  grossProfit         Decimal?   @db.Decimal(15, 2)
  netIncome           Decimal?   @db.Decimal(15, 2)
  
  // Derived
  revenueMultiple     Decimal?   @db.Decimal(5, 2)
  ebitdaMultiple      Decimal?   @db.Decimal(5, 2)
  grossMargin         Decimal?   @db.Decimal(5, 4)
  ebitdaMargin        Decimal?   @db.Decimal(5, 4)
  
  // Company Details
  employeeCount       Int?
  yearFounded         Int?
  
  // Location
  city                String?
  state               String?
  country             String     @default("USA")
  
  // Scores
  attractivenessScore Int?
  fitScore            Int?
  riskScore           Int?
  
  // Analysis
  investmentThesis    String?    @db.Text
  keyRisks            String?    @db.Text
  valueCreationPlan   String?    @db.Text
  
  // Dates
  firstContactDate    DateTime?
  ndaSignedDate       DateTime?
  cimReceivedDate     DateTime?
  managementMeetingDate DateTime?
  loiSubmittedDate    DateTime?
  loiAcceptedDate     DateTime?
  expectedCloseDate   DateTime?
  actualCloseDate     DateTime?
  
  // Notes
  nextSteps           String?    @db.Text
  internalNotes       String?    @db.Text
  
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
  deletedAt           DateTime?

  // Relations
  contacts            DealContact[]
  activities          Activity[]
  documents           Document[]
  tasks               Task[]
  dueDiligenceItems   DueDiligenceItem[]
  comments            Comment[]
  portfolioCompany    PortfolioCompany?

  @@index([fundId])
  @@index([stage])
  @@index([status])
  @@index([deletedAt])
}

enum DealStage {
  IDENTIFIED // Added to match Badge
  INITIAL_REVIEW
  PRELIMINARY_ANALYSIS
  MANAGEMENT_MEETING
  NDA_SIGNED // Added to match Badge
  NDA_CIM
  IOI_SUBMITTED // Added to match Badge
  SITE_VISIT
  LOI_PREPARATION
  LOI_NEGOTIATION
  DUE_DILIGENCE
  FINAL_NEGOTIATION
  CLOSING
  CLOSED_WON // Added to match Badge
  CLOSED_LOST // Added to match Badge
  CLOSED 
  PASSED
  ON_HOLD // Added to match Badge
}

enum DealStatus {
  ACTIVE
  ON_HOLD
  PASSED
  LOST
  WON
}

model DealSource {
  id          String   @id @default(cuid())
  name        String   @unique
  type        DealSourceType
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  deals       Deal[]
}

enum DealSourceType {
  BROKER
  INVESTMENT_BANK
  DIRECT_OUTREACH
  REFERRAL_NETWORK
  REFERRAL_INVESTOR
  ONLINE_MARKETPLACE
  CONFERENCE
  ADVISOR
  INBOUND
  OTHER
}

model DealContact {
  id          String   @id @default(cuid())
  deal        Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String
  name        String
  title       String?
  email       String?
  phone       String?
  role        DealContactRole
  isPrimary   Boolean  @default(false)
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dealId])
}

enum DealContactRole {
  OWNER
  CO_OWNER
  MANAGEMENT
  BROKER
  ATTORNEY
  ACCOUNTANT
  ADVISOR
  OTHER
}

model DueDiligenceItem {
  id          String     @id @default(cuid())
  deal        Deal       @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String
  category    DDCategory
  item        String
  status      DDStatus   @default(NOT_STARTED)
  priority    Int        @default(3)
  assignedTo  String?
  
  notes       String?    @db.Text
  findings    String?    @db.Text
  redFlag     Boolean    @default(false)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([dealId])
  @@index([category])
}

enum DDCategory {
  FINANCIAL
  ACCOUNTING
  TAX
  LEGAL
  COMMERCIAL
  OPERATIONAL
  HR
  IT
  ENVIRONMENTAL
  INSURANCE
  REAL_ESTATE
  IP
  REGULATORY
  QUALITY
  OTHER
}

enum DDStatus {
  NOT_STARTED
  IN_PROGRESS
  PENDING_INFO
  UNDER_REVIEW
  COMPLETED
  NA
}

// ============================================================================
// SHARED MODELS
// ============================================================================

model Document {
  id            String           @id @default(cuid())
  name          String
  fileName      String
  fileUrl       String
  fileType      String
  fileSize      Int
  
  category      DocumentCategory
  
  // Versioning
  version       Int              @default(1)
  isLatest      Boolean          @default(true)
  visibleToLPs  Boolean          @default(false)
  parentId      String?
  parent        Document?        @relation("DocumentVersions", fields: [parentId], references: [id])
  versions      Document[]       @relation("DocumentVersions")

  // Ownership
  fund              Fund?             @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId            String?
  deal              Deal?             @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId            String?
  investor          Investor?         @relation(fields: [investorId], references: [id], onDelete: Cascade)
  investorId        String?

  uploadedBy    String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  deletedAt     DateTime?

  @@index([fundId])
  @@index([dealId])
  @@index([investorId])
  @@index([deletedAt])
  @@index([parentId])
}

enum DocumentCategory {
  FUND_FORMATION
  INVESTOR_COMMS
  TAX
  COMPLIANCE
  CIM
  NDA
  FINANCIAL_STATEMENTS
  LOI
  TERM_SHEET
  DUE_DILIGENCE
  PURCHASE_AGREEMENT
  CLOSING_DOCS
  BOARD_MATERIALS
  OPERATING_REPORTS
  BUDGET
  STRATEGIC_PLAN
  LEGAL
  OTHER
}

model Activity {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  deal        Deal?        @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  type        ActivityType
  title       String
  description String?      @db.Text
  
  createdAt   DateTime     @default(now())

  @@index([dealId])
  @@index([userId])
}

enum ActivityType {
  NOTE
  CALL
  EMAIL_SENT
  EMAIL_RECEIVED
  MEETING
  SITE_VISIT
  DOCUMENT_SENT
  DOCUMENT_RECEIVED
  STAGE_CHANGE
  STATUS_CHANGE
  TASK_COMPLETED
  COMMENT
  OTHER
}

model Comment {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  content     String   @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dealId])
  @@index([userId])
}

model Task {
  id          String     @id @default(cuid())
  
  assignee    User       @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: Cascade)
  assigneeId  String
  createdBy   User       @relation("TaskCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String
  
  deal        Deal?      @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  title       String
  description String?    @db.Text
  status      TaskStatus @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  
  dueDate     DateTime?
  completedAt DateTime?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([assigneeId])
  @@index([dealId])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  URGENT
  HIGH
  MEDIUM
  LOW
}

model Notification {
  id          String           @id @default(cuid())
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  type        NotificationType
  title       String
  message     String
  link        String?
  
  isRead      Boolean          @default(false)
  
  createdAt   DateTime         @default(now())

  @@index([userId])
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_DUE
  TASK_OVERDUE
  DEAL_STAGE_CHANGE
  CAPITAL_CALL_DUE
  DISTRIBUTION_MADE
  DOCUMENT_SHARED
  COMMENT_ADDED
  REPORT_PUBLISHED
  SYSTEM
}

model AuditLog {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  action      AuditAction
  entityType  String
  entityId    String
  changes     Json?
  
  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
  @@index([userId])
  @@index([createdAt])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  VIEW
  EXPORT
  LOGIN
  LOGOUT
  FAILED_LOGIN
}

// ============================================================================
// INVESTOR & CAPITAL MANAGEMENT
// ============================================================================

model Investor {
  id              String         @id @default(cuid())

  // Basic Info
  name            String
  type            InvestorType
  status          InvestorStatus @default(PROSPECT)

  // Entity Details
  legalName       String?
  taxId           String?        // EIN or SSN (encrypted in production)
  jurisdiction    String?        // State/Country of formation

  // Contact Info
  email           String?
  phone           String?
  address         String?
  city            String?
  state           String?
  country         String         @default("USA")
  postalCode      String?

  // Primary Contact Person
  contactName     String?
  contactEmail    String?
  contactPhone    String?
  contactTitle    String?

  // Compliance
  accreditedStatus AccreditedStatus?
  kycStatus       KYCStatus      @default(PENDING)
  kycCompletedAt  DateTime?
  amlStatus       AMLStatus      @default(PENDING)
  amlCompletedAt  DateTime?

  // Capacity
  investmentCapacity Decimal?    @db.Decimal(15, 2) // Total they can invest

  // Notes
  notes           String?        @db.Text
  source          String?        // How they heard about the fund

  // Portal access
  user            User?          @relation(fields: [userId], references: [id])
  userId          String?        @unique

  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  deletedAt       DateTime?

  // Relations
  commitments     Commitment[]
  capitalCalls    CapitalCallItem[]
  distributions   DistributionItem[]
  documents       Document[]
  communications  Communication[]

  @@index([type])
  @@index([status])
  @@index([deletedAt])
}

enum InvestorType {
  INDIVIDUAL
  JOINT_VENTURE
  TRUST
  IRA
  FAMILY_OFFICE
  FOUNDATION
  ENDOWMENT
  PENSION
  INVESTMENT_FUND
  CORPORATE
  SOVEREIGN_WEALTH
  INSURANCE
  BANK
  OTHER
}

enum InvestorStatus {
  PROSPECT
  CONTACTED
  INTERESTED
  DUE_DILIGENCE
  COMMITTED
  ACTIVE
  INACTIVE
  DECLINED
}

enum AccreditedStatus {
  ACCREDITED_INDIVIDUAL    // $200k income or $1M net worth
  QUALIFIED_PURCHASER      // $5M+ investments
  QUALIFIED_CLIENT         // $1.1M+ with adviser
  INSTITUTIONAL            // Banks, insurance, registered investment companies
  NOT_ACCREDITED
  PENDING_VERIFICATION
}

enum KYCStatus {
  PENDING
  IN_PROGRESS
  APPROVED
  REJECTED
  EXPIRED
}

enum AMLStatus {
  PENDING
  CLEARED
  FLAGGED
  REJECTED
}

model Commitment {
  id              String           @id @default(cuid())

  investor        Investor         @relation(fields: [investorId], references: [id], onDelete: Cascade)
  investorId      String
  fund            Fund             @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId          String

  // Amounts
  committedAmount Decimal          @db.Decimal(15, 2)
  calledAmount    Decimal          @default(0) @db.Decimal(15, 2)
  paidAmount      Decimal          @default(0) @db.Decimal(15, 2)
  distributedAmount Decimal        @default(0) @db.Decimal(15, 2)

  // Calculated (unfunded = committed - called)
  // Calculated (ownership % = committed / total fund committed)

  // Status
  status          CommitmentStatus @default(PENDING)

  // Dates
  commitmentDate  DateTime?
  effectiveDate   DateTime?        // When they officially became an LP

  // Documentation
  subscriptionDocsSigned Boolean   @default(false)
  subscriptionDocsDate   DateTime?
  sideLetterExists       Boolean   @default(false)

  // Notes
  notes           String?          @db.Text

  deletedAt       DateTime?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@unique([investorId, fundId])
  @@index([fundId])
  @@index([investorId])
  @@index([deletedAt])
}

enum CommitmentStatus {
  PENDING          // Verbal commitment, docs not signed
  SIGNED           // Subscription docs signed
  FUNDED           // First capital call paid
  ACTIVE           // Full LP in good standing
  DEFAULTED        // Missed capital calls
  TRANSFERRED      // Interest transferred to another LP
  REDEEMED         // Early redemption (if allowed)
}

model CapitalCall {
  id              String           @id @default(cuid())

  fund            Fund             @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId          String

  // Call Details
  callNumber      Int              // Sequential: Call #1, #2, etc.
  callDate        DateTime
  dueDate         DateTime

  // Amounts
  totalAmount     Decimal          @db.Decimal(15, 2)
  forInvestment   Decimal?         @db.Decimal(15, 2) // For deals
  forFees         Decimal?         @db.Decimal(15, 2) // Management fees
  forExpenses     Decimal?         @db.Decimal(15, 2) // Fund expenses

  // Purpose
  purpose         String?          @db.Text
  dealReference   String?          // Which deal this is funding

  // Status
  status          CapitalCallStatus @default(DRAFT)

  // Dates
  noticeDate      DateTime?        // When notice was sent
  completedDate   DateTime?        // When fully funded

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  deletedAt       DateTime?

  // Relations
  items           CapitalCallItem[]

  @@index([fundId])
  @@index([status])
  @@index([deletedAt])
}

enum CapitalCallStatus {
  DRAFT
  APPROVED
  SENT
  PARTIALLY_FUNDED
  FULLY_FUNDED
  CANCELLED
}

model CapitalCallItem {
  id              String       @id @default(cuid())

  capitalCall     CapitalCall  @relation(fields: [capitalCallId], references: [id], onDelete: Cascade)
  capitalCallId   String
  investor        Investor     @relation(fields: [investorId], references: [id], onDelete: Cascade)
  investorId      String

  // Amounts
  callAmount      Decimal      @db.Decimal(15, 2) // Pro-rata share
  paidAmount      Decimal      @default(0) @db.Decimal(15, 2)

  // Status
  status          CallItemStatus @default(PENDING)
  paidDate        DateTime?

  // Notes
  notes           String?

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([capitalCallId, investorId])
  @@index([capitalCallId])
  @@index([investorId])
}

enum CallItemStatus {
  PENDING
  NOTIFIED
  PARTIAL
  PAID
  OVERDUE
  DEFAULTED
}

model Distribution {
  id              String             @id @default(cuid())

  fund            Fund               @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId          String

  // Distribution Details
  distributionNumber Int             // Sequential
  distributionDate   DateTime

  // Amounts
  totalAmount     Decimal            @db.Decimal(15, 2)
  returnOfCapital Decimal?           @db.Decimal(15, 2)
  realizedGains   Decimal?           @db.Decimal(15, 2)
  dividends       Decimal?           @db.Decimal(15, 2)
  interest        Decimal?           @db.Decimal(15, 2)

  // Type
  type            DistributionType

  // Source
  source          String?            // Which investment/exit generated this

  // Status
  status          DistributionStatus @default(DRAFT)

  // Dates
  approvedDate    DateTime?
  paidDate        DateTime?

  notes           String?            @db.Text

  createdAt       DateTime           @default(now())
  updatedAt       DateTime           @updatedAt
  deletedAt       DateTime?

  // Relations
  items           DistributionItem[]

  @@index([fundId])
  @@index([status])
  @@index([deletedAt])
}

enum DistributionType {
  RETURN_OF_CAPITAL
  PROFIT_DISTRIBUTION
  RECALLABLE
  FINAL
  SPECIAL
}

enum DistributionStatus {
  DRAFT
  APPROVED
  PROCESSING
  COMPLETED
  CANCELLED
}

model DistributionItem {
  id              String       @id @default(cuid())

  distribution    Distribution @relation(fields: [distributionId], references: [id], onDelete: Cascade)
  distributionId  String
  investor        Investor     @relation(fields: [investorId], references: [id], onDelete: Cascade)
  investorId      String

  // Amounts
  grossAmount     Decimal      @db.Decimal(15, 2) // Before withholding
  withholdingTax  Decimal      @default(0) @db.Decimal(15, 2)
  netAmount       Decimal      @db.Decimal(15, 2) // After withholding

  // Status
  status          DistItemStatus @default(PENDING)
  paidDate        DateTime?

  // Payment Details
  paymentMethod   String?
  paymentReference String?

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@unique([distributionId, investorId])
  @@index([distributionId])
  @@index([investorId])
}

enum DistItemStatus {
  PENDING
  PROCESSING
  PAID
  FAILED
}

// ============================================================================
// PORTFOLIO MANAGEMENT
// ============================================================================

model PortfolioCompany {
  id              String              @id @default(cuid())

  fund            Fund                @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId          String

  deal            Deal?               @relation(fields: [dealId], references: [id])
  dealId          String?             @unique // Link to original deal

  // Basic Info
  name            String
  legalName       String?
  description     String?             @db.Text
  website         String?
  logo            String?

  // Classification
  industry        String?
  subIndustry     String?
  businessModel   String?

  // Location
  headquarters    String?
  city            String?
  state           String?
  country         String              @default("USA")

  // Investment Details
  acquisitionDate DateTime
  exitDate        DateTime?
  holdingPeriod   Int?                // Months (calculated)

  // Entry Metrics
  entryValuation  Decimal             @db.Decimal(15, 2)
  entryRevenue    Decimal?            @db.Decimal(15, 2)
  entryEbitda     Decimal?            @db.Decimal(15, 2)
  entryMultiple   Decimal?            @db.Decimal(5, 2) // Entry EV/EBITDA

  // Investment Structure
  equityInvested  Decimal             @db.Decimal(15, 2)
  debtFinancing   Decimal?            @db.Decimal(15, 2)
  totalInvestment Decimal             @db.Decimal(15, 2) // Equity + Debt
  ownershipPct    Decimal             @db.Decimal(5, 4)  // e.g., 0.85 = 85%

  // Current Status
  status          PortfolioStatus     @default(HOLDING)

  // Exit Details (if exited)
  exitValuation   Decimal?            @db.Decimal(15, 2)
  exitRevenue     Decimal?            @db.Decimal(15, 2)
  exitEbitda      Decimal?            @db.Decimal(15, 2)
  exitMultiple    Decimal?            @db.Decimal(5, 2)
  exitType        ExitType?
  exitBuyer       String?

  // Returns (calculated or entered)
  realizedValue   Decimal?            @db.Decimal(15, 2)
  unrealizedValue Decimal?            @db.Decimal(15, 2)
  totalValue      Decimal?            @db.Decimal(15, 2)
  moic            Decimal?            @db.Decimal(5, 2)  // Multiple on Invested Capital
  irr             Decimal?            @db.Decimal(5, 4)  // Internal Rate of Return

  // Management
  ceoName         String?
  ceoEmail        String?
  ceoPhone        String?
  boardSeats      Int?

  // Notes
  investmentThesis String?            @db.Text
  notes           String?             @db.Text

  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  deletedAt       DateTime?

  // Relations
  metrics         PortfolioMetric[]
  valuations      Valuation[]

  @@index([fundId])
  @@index([status])
  @@index([deletedAt])
}

enum PortfolioStatus {
  HOLDING           // Active investment
  PREPARING_EXIT    // Actively seeking exit
  UNDER_LOI         // Exit LOI signed
  PARTIAL_EXIT      // Partial stake sold
  EXITED            // Fully exited
  WRITTEN_OFF       // Investment written off
}

enum ExitType {
  STRATEGIC_SALE    // Sold to strategic buyer
  FINANCIAL_SALE    // Sold to financial buyer/PE
  IPO               // Public offering
  RECAPITALIZATION  // Recap/dividend recap
  MANAGEMENT_BUYOUT // MBO
  MERGER            // Merged with another company
  LIQUIDATION       // Business liquidated
  WRITE_OFF         // Total loss
}

model PortfolioMetric {
  id              String            @id @default(cuid())

  company         PortfolioCompany  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String

  // Period
  periodDate      DateTime          // End of period (e.g., Q4 2025)
  periodType      MetricPeriodType  @default(QUARTERLY)

  // Financial Metrics
  revenue         Decimal?          @db.Decimal(15, 2)
  revenueGrowth   Decimal?          @db.Decimal(5, 4)   // YoY growth %
  grossProfit     Decimal?          @db.Decimal(15, 2)
  grossMargin     Decimal?          @db.Decimal(5, 4)
  ebitda          Decimal?          @db.Decimal(15, 2)
  ebitdaMargin    Decimal?          @db.Decimal(5, 4)
  netIncome       Decimal?          @db.Decimal(15, 2)

  // Cash Flow
  operatingCashFlow Decimal?        @db.Decimal(15, 2)
  freeCashFlow    Decimal?          @db.Decimal(15, 2)
  cashBalance     Decimal?          @db.Decimal(15, 2)

  // Debt
  totalDebt       Decimal?          @db.Decimal(15, 2)
  netDebt         Decimal?          @db.Decimal(15, 2)

  // Operational
  employeeCount   Int?
  customerCount   Int?

  // Valuation
  currentValuation Decimal?         @db.Decimal(15, 2)
  evEbitda        Decimal?          @db.Decimal(5, 2)   // EV/EBITDA multiple

  // Notes
  highlights      String?           @db.Text
  concerns        String?           @db.Text
  notes           String?           @db.Text

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@unique([companyId, periodDate, periodType])
  @@index([companyId])
  @@index([periodDate])
}

enum MetricPeriodType {
  MONTHLY
  QUARTERLY
  ANNUAL
}

model Valuation {
  id              String           @id @default(cuid())
  company         PortfolioCompany @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId       String

  date            DateTime
  value           Decimal          @db.Decimal(15, 2)
  equityValue     Decimal?         @db.Decimal(15, 2)

  methodology     String           // Free text: "DCF", "EBITDA Multiple", etc.

  revenueMultiple Decimal?         @db.Decimal(5, 2)
  ebitdaMultiple  Decimal?         @db.Decimal(5, 2)

  isOfficial      Boolean          @default(false)
  notes           String?          @db.Text

  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@index([companyId])
  @@index([date])
}

// ============================================================================
// REPORTS & COMMUNICATIONS
// ============================================================================

model Report {
  id          String       @id @default(cuid())
  fund        Fund         @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId      String

  type        ReportType
  title       String

  periodStart DateTime?
  periodEnd   DateTime?

  content     Json?
  fileUrl     String?

  status      ReportStatus @default(DRAFT)

  publishedAt DateTime?
  publishedBy String?

  sentToLPs   Boolean      @default(false)
  sentAt      DateTime?

  notes       String?      @db.Text
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([fundId])
  @@index([type])
  @@index([status])
}

enum ReportType {
  QUARTERLY_UPDATE
  ANNUAL_REPORT
  CAPITAL_CALL_NOTICE
  DISTRIBUTION_NOTICE
  K1
  FINANCIAL_STATEMENT
  PORTFOLIO_SUMMARY
  CUSTOM
}

enum ReportStatus {
  DRAFT
  REVIEW
  APPROVED
  PUBLISHED
  ARCHIVED
}

// ============================================================================
// COMMUNICATIONS
// ============================================================================

model Communication {
  id          String                @id @default(cuid())
  investor    Investor              @relation(fields: [investorId], references: [id], onDelete: Cascade)
  investorId  String

  type        CommunicationType
  direction   CommunicationDirection
  subject     String?
  content     String?               @db.Text
  date        DateTime

  // Participants
  contactName String?               // Who at the investor
  sentBy      String?               // Our team member name

  // Follow-up
  followUpDate DateTime?
  followUpDone Boolean              @default(false)

  notes       String?               @db.Text
  createdAt   DateTime              @default(now())

  @@index([investorId])
  @@index([date])
}

enum CommunicationType {
  EMAIL
  CALL
  MEETING
  VIDEO_CALL
  TEXT
  OTHER
}

enum CommunicationDirection {
  INBOUND
  OUTBOUND
}

// ============================================================================
// AI COPILOT
// ============================================================================

model Conversation {
  id         String    @id @default(cuid())
  fund       Fund      @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId     String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  title      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  archivedAt DateTime?
  messages   Message[]

  @@index([fundId])
  @@index([userId])
  @@index([updatedAt])
}

model Message {
  id              String       @id @default(cuid())
  conversation    Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  conversationId  String
  role            String // 'user' | 'assistant' | 'system' | 'tool'
  content         String       @db.Text
  toolInvocations Json?
  tokenCount      Int?
  createdAt       DateTime     @default(now())

  @@index([conversationId])
  @@index([createdAt])
}
