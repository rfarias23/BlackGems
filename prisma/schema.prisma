generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTHENTICATION
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  role          UserRole  @default(LP_VIEWER)
  avatar        String?
  isActive      Boolean   @default(true)
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  fundMemberships FundMember[]
  activities      Activity[]
  comments        Comment[]
  tasksAssigned   Task[]           @relation("TaskAssignee")
  tasksCreated    Task[]           @relation("TaskCreator")
  notifications   Notification[]
  auditLogs       AuditLog[]
  sessions        Session[]
  accounts        Account[]
}

enum UserRole {
  SUPER_ADMIN
  FUND_ADMIN
  INVESTMENT_MANAGER
  ANALYST
  LP_PRIMARY
  LP_VIEWER
  AUDITOR
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================================================
// FUND STRUCTURE
// ============================================================================

model Fund {
  id                String     @id @default(cuid())
  name              String
  slug              String?    @unique // Added per user request
  legalName         String?
  type              FundType
  status            FundStatus @default(RAISING)
  vintage           Int        
  
  // Capital Structure
  targetSize        Decimal    @db.Decimal(15, 2)
  hardCap           Decimal?   @db.Decimal(15, 2)
  minimumCommitment Decimal?   @db.Decimal(15, 2)
  currency          String     @default("USD")
  
  // Fee Structure
  managementFee     Decimal    @db.Decimal(5, 4)
  carriedInterest   Decimal    @db.Decimal(5, 4)
  hurdleRate        Decimal?   @db.Decimal(5, 4)
  catchUpRate       Decimal?   @db.Decimal(5, 4)
  
  // Metadata
  description       String?    @db.Text
  
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  // Relations
  members              FundMember[]
  deals                Deal[]
  documents            Document[]
  // investors            Investor[] // Commented out for MVP
  // portfolioCompanies   PortfolioCompany[] // Commented out for MVP
}

enum FundType {
  TRADITIONAL_SEARCH_FUND
  SELF_FUNDED_SEARCH
  ACCELERATOR_FUND
  ACQUISITION_FUND
  PE_FUND
  HOLDING_COMPANY
}

enum FundStatus {
  RAISING
  SEARCHING
  UNDER_LOI
  ACQUIRED
  OPERATING
  PREPARING_EXIT
  EXITED
  DISSOLVED
  CLOSED
}

model FundMember {
  id        String   @id @default(cuid())
  fund      Fund     @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      FundMemberRole
  title     String?
  joinedAt  DateTime @default(now())
  leftAt    DateTime?
  isActive  Boolean  @default(true)

  @@unique([fundId, userId])
  @@index([fundId])
  @@index([userId])
}

enum FundMemberRole {
  PRINCIPAL
  CO_PRINCIPAL
  ADVISOR
  ANALYST
  ADMIN
}

// ============================================================================
// DEAL PIPELINE
// ============================================================================

model Deal {
  id                  String     @id @default(cuid())
  fund                Fund       @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId              String
  
  // Basic Info
  name                String
  companyName         String
  website             String?
  description         String?    @db.Text
  
  // Classification
  industry            String?
  subIndustry         String?
  businessModel       String?
  
  // Stage & Status
  stage               DealStage  @default(INITIAL_REVIEW)
  status              DealStatus @default(ACTIVE)
  
  // Sourcing
  source              DealSource? @relation(fields: [sourceId], references: [id])
  sourceId            String?
  sourceContact       String?
  sourceNotes         String?
  
  // Financials
  askingPrice         Decimal?   @db.Decimal(15, 2)
  revenue             Decimal?   @db.Decimal(15, 2)
  ebitda              Decimal?   @db.Decimal(15, 2)
  grossProfit         Decimal?   @db.Decimal(15, 2)
  netIncome           Decimal?   @db.Decimal(15, 2)
  
  // Derived
  revenueMultiple     Decimal?   @db.Decimal(5, 2)
  ebitdaMultiple      Decimal?   @db.Decimal(5, 2)
  grossMargin         Decimal?   @db.Decimal(5, 4)
  ebitdaMargin        Decimal?   @db.Decimal(5, 4)
  
  // Company Details
  employeeCount       Int?
  yearFounded         Int?
  
  // Location
  city                String?
  state               String?
  country             String     @default("USA")
  
  // Scores
  attractivenessScore Int?
  fitScore            Int?
  riskScore           Int?
  
  // Analysis
  investmentThesis    String?    @db.Text
  keyRisks            String?    @db.Text
  valueCreationPlan   String?    @db.Text
  
  // Dates
  firstContactDate    DateTime?
  ndaSignedDate       DateTime?
  cimReceivedDate     DateTime?
  managementMeetingDate DateTime?
  loiSubmittedDate    DateTime?
  loiAcceptedDate     DateTime?
  expectedCloseDate   DateTime?
  actualCloseDate     DateTime?
  
  // Notes
  nextSteps           String?    @db.Text
  internalNotes       String?    @db.Text
  
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt

  // Relations
  contacts            DealContact[]
  activities          Activity[]
  documents           Document[]
  tasks               Task[]
  dueDiligenceItems   DueDiligenceItem[]
  comments            Comment[]

  @@index([fundId])
  @@index([stage])
  @@index([status])
}

enum DealStage {
  IDENTIFIED // Added to match Badge
  INITIAL_REVIEW
  PRELIMINARY_ANALYSIS
  MANAGEMENT_MEETING
  NDA_SIGNED // Added to match Badge
  NDA_CIM
  IOI_SUBMITTED // Added to match Badge
  SITE_VISIT
  LOI_PREPARATION
  LOI_NEGOTIATION
  DUE_DILIGENCE
  FINAL_NEGOTIATION
  CLOSING
  CLOSED_WON // Added to match Badge
  CLOSED_LOST // Added to match Badge
  CLOSED 
  PASSED
  ON_HOLD // Added to match Badge
}

enum DealStatus {
  ACTIVE
  ON_HOLD
  PASSED
  LOST
  WON
}

model DealSource {
  id          String   @id @default(cuid())
  name        String   @unique
  type        DealSourceType
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  
  deals       Deal[]
}

enum DealSourceType {
  BROKER
  INVESTMENT_BANK
  DIRECT_OUTREACH
  REFERRAL_NETWORK
  REFERRAL_INVESTOR
  ONLINE_MARKETPLACE
  CONFERENCE
  ADVISOR
  INBOUND
  OTHER
}

model DealContact {
  id          String   @id @default(cuid())
  deal        Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String
  name        String
  title       String?
  email       String?
  phone       String?
  role        DealContactRole
  isPrimary   Boolean  @default(false)
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dealId])
}

enum DealContactRole {
  OWNER
  CO_OWNER
  MANAGEMENT
  BROKER
  ATTORNEY
  ACCOUNTANT
  ADVISOR
  OTHER
}

model DueDiligenceItem {
  id          String     @id @default(cuid())
  deal        Deal       @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String
  category    DDCategory
  item        String
  status      DDStatus   @default(NOT_STARTED)
  priority    Int        @default(3)
  assignedTo  String?
  
  notes       String?    @db.Text
  findings    String?    @db.Text
  redFlag     Boolean    @default(false)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([dealId])
  @@index([category])
}

enum DDCategory {
  FINANCIAL
  ACCOUNTING
  TAX
  LEGAL
  COMMERCIAL
  OPERATIONAL
  HR
  IT
  ENVIRONMENTAL
  INSURANCE
  REAL_ESTATE
  IP
  REGULATORY
  QUALITY
  OTHER
}

enum DDStatus {
  NOT_STARTED
  IN_PROGRESS
  PENDING_INFO
  UNDER_REVIEW
  COMPLETED
  NA
}

// ============================================================================
// SHARED MODELS
// ============================================================================

model Document {
  id            String           @id @default(cuid())
  name          String
  fileName      String
  fileUrl       String
  fileType      String
  fileSize      Int
  
  category      DocumentCategory
  
  // Ownership
  fund              Fund?             @relation(fields: [fundId], references: [id], onDelete: Cascade)
  fundId            String?
  deal              Deal?             @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId            String?
  
  uploadedBy    String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([fundId])
  @@index([dealId])
}

enum DocumentCategory {
  FUND_FORMATION
  INVESTOR_COMMS
  TAX
  COMPLIANCE
  CIM
  NDA
  FINANCIAL_STATEMENTS
  LOI
  TERM_SHEET
  DUE_DILIGENCE
  PURCHASE_AGREEMENT
  CLOSING_DOCS
  BOARD_MATERIALS
  OPERATING_REPORTS
  BUDGET
  STRATEGIC_PLAN
  LEGAL
  OTHER
}

model Activity {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  deal        Deal?        @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  type        ActivityType
  title       String
  description String?      @db.Text
  
  createdAt   DateTime     @default(now())

  @@index([dealId])
  @@index([userId])
}

enum ActivityType {
  NOTE
  CALL
  EMAIL_SENT
  EMAIL_RECEIVED
  MEETING
  SITE_VISIT
  DOCUMENT_SENT
  DOCUMENT_RECEIVED
  STAGE_CHANGE
  STATUS_CHANGE
  TASK_COMPLETED
  COMMENT
  OTHER
}

model Comment {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  deal        Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  content     String   @db.Text
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dealId])
  @@index([userId])
}

model Task {
  id          String     @id @default(cuid())
  
  assignee    User       @relation("TaskAssignee", fields: [assigneeId], references: [id], onDelete: Cascade)
  assigneeId  String
  createdBy   User       @relation("TaskCreator", fields: [createdById], references: [id], onDelete: Cascade)
  createdById String
  
  deal        Deal?      @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId      String?
  
  title       String
  description String?    @db.Text
  status      TaskStatus @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  
  dueDate     DateTime?
  completedAt DateTime?
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([assigneeId])
  @@index([dealId])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  COMPLETED
  CANCELLED
}

enum TaskPriority {
  URGENT
  HIGH
  MEDIUM
  LOW
}

model Notification {
  id          String           @id @default(cuid())
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  
  type        NotificationType
  title       String
  message     String
  link        String?
  
  isRead      Boolean          @default(false)
  
  createdAt   DateTime         @default(now())

  @@index([userId])
}

enum NotificationType {
  TASK_ASSIGNED
  TASK_DUE
  TASK_OVERDUE
  DEAL_STAGE_CHANGE
  CAPITAL_CALL_DUE
  DISTRIBUTION_MADE
  DOCUMENT_SHARED
  COMMENT_ADDED
  REPORT_PUBLISHED
  SYSTEM
}

model AuditLog {
  id          String   @id @default(cuid())
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  action      AuditAction
  entityType  String
  entityId    String
  changes     Json?
  
  createdAt   DateTime @default(now())

  @@index([entityType, entityId])
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
  VIEW
  EXPORT
  LOGIN
  LOGOUT
  FAILED_LOGIN
}
